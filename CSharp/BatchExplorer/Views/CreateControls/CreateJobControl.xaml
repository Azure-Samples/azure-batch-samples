<UserControl x:Class="Microsoft.Azure.BatchExplorer.Views.CreateControls.CreateJobControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converter="clr-namespace:Microsoft.Azure.BatchExplorer.Converters"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="300">

    <UserControl.Resources>
        <converter:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Background="WhiteSmoke">
        <ScrollViewer
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <StackPanel
                Orientation="Vertical">
                <!-- Main Create Options -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock 
                        Grid.ColumnSpan="2"
                        FontSize="16"
                        Text="Create Job"/>

                    <StackPanel 
                        Orientation="Horizontal"
                        Grid.Row="1" 
                        Grid.Column="0">

                        <TextBlock 
                            VerticalAlignment="Center"
                            Margin="4,0,0,0"
                            Foreground="Red"
                            Text="*" />
                        <TextBlock
                            Margin="8,4"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Job Id"/>
                    </StackPanel>
                    <TextBox 
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding JobId}"/>

                    <TextBlock 
                        Grid.Row="3"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="8,4"
                        FontSize="12"
                        Text="Priority" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Text="{Binding Priority}"/>

                    <TextBlock 
                        Grid.Row="4"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="8,4"
                        FontSize="12"
                        Text="Max Retry Count" />

                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Text="{Binding MaxRetryCount}"/>

                    <TextBlock 
                        Grid.Row="6"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="8,4"
                        FontSize="12"
                        Text="Create a Job Manager" />

                    <CheckBox
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="4"
                        IsChecked="{Binding IsCreateJobManagerSelected}"/>
                </Grid>

                <!-- Pool Settings -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel 
                        Orientation="Horizontal"
                        Grid.Row="0"
                        Grid.ColumnSpan="2">
                    <TextBlock 
                        VerticalAlignment="Center"
                        Margin="4,0,0,0"
                        Foreground="Red"
                        Text="*" />

                    <TextBlock
                        Margin="4,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="Job Pool Settings"/>
                    </StackPanel>
                    <RadioButton
                        x:Name="numberTargetDedicatedRadioButton"
                        VerticalAlignment="Center"
                        Grid.Row="1"
                        Grid.Column="0"
                        IsChecked="True"
                        GroupName="TDAuto"
                        FontSize="12"
                        Content="Use Existing Pool" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        MinHeight="24"
                        IsEnabled="{Binding IsChecked,ElementName=numberTargetDedicatedRadioButton}"
                        Text="{Binding PoolId}">
                    </TextBox>

                    <RadioButton 
                        x:Name="autoScaleFormulaRadioButton"
                        VerticalAlignment="Center"
                        Grid.Row="2"
                        Grid.Column="0"
                        GroupName="TDAuto"
                        FontSize="12"
                        IsChecked="{Binding UseAutoPool}"
                        Content="Use AutoPool" />

                    <TextBox 
                        Grid.Row="2" 
                        Grid.Column="1" 
                        MinHeight="24"
                        Visibility="Hidden"/>

                    <TextBlock
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        VerticalAlignment="Center"
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="8,4"
                        FontSize="12"
                        Text="Auto Pool Prefix" />

                    <TextBox 
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="3" 
                        Grid.Column="1" 
                        MinHeight="24"
                        Text="{Binding AutoPoolPrefix}"/>

                    <TextBlock
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="8,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Pool Lifetime Option"/>

                    <ComboBox
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="4"
                        Grid.Column="1"
                        ItemsSource="{Binding AvailableLifeTimeOptions}"
                        SelectedIndex="1"
                        SelectedItem="{Binding SelectedLifetimeOption}">
                    </ComboBox>

                    <TextBlock
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="8,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Keep Alive"/>

                    <ComboBox
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="5"
                        Grid.Column="1"
                        ItemsSource="{Binding AvailableKeepAliveOptions}"
                        SelectedIndex="0"
                        SelectedItem="{Binding SelectedKeepAliveItem}">
                    </ComboBox>

                    <TextBlock
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="6"
                        Grid.Column="0"
                        Margin="8,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="VM Size"/>

                    <ComboBox
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="6"
                        Grid.Column="1"
                        IsEditable="True"
                        ItemsSource="{Binding AvailableVirtualMachineSizes}"
                        SelectedIndex="0"
                        SelectedItem="{Binding SelectedVirtualMachineSize}">
                    </ComboBox>

                    <TextBlock
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="7"
                        Grid.Column="0"
                        Margin="8,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="OS Family"/>

                    <ComboBox
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="7"
                        Grid.Column="1"
                        IsEditable="True"
                        ItemsSource="{Binding AvailableOSFamilies}"
                        SelectedIndex="0"
                        SelectedItem="{Binding SelectedOSFamily}">
                    </ComboBox>

                    <TextBlock
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        VerticalAlignment="Center"
                        Grid.Row="8"
                        Grid.Column="0"
                        Margin="8,4"
                        FontSize="12"
                        Text="Target Dedicated" />

                    <TextBox 
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="8" 
                        Grid.Column="1" 
                        MinHeight="24"
                        Text="{Binding TargetDedicated}"/>

                    <TextBlock
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        VerticalAlignment="Center"
                        Grid.Row="9"
                        Grid.Column="0"
                        Margin="8,4"
                        FontSize="12"
                        Text="Target Low Priority" />

                    <TextBox 
                        Visibility="{Binding UseAutoPool, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Grid.Row="9" 
                        Grid.Column="1" 
                        MinHeight="24"
                        Text="{Binding TargetLowPriority}"/>
                </Grid>
                
                <!-- Create Job Manager Section -->
                <Grid
                    Visibility="{Binding IsCreateJobManagerSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="4,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="Job Manager"/>

                    <StackPanel 
                        Orientation="Horizontal"
                        Grid.Row="1" 
                        Grid.Column="0">

                        <TextBlock 
                            VerticalAlignment="Center"
                            Margin="4,0,0,0"
                            Foreground="Red"
                            Text="*" />
                        <TextBlock
                            Margin="8,4"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Job Manager Id"/>
                    </StackPanel>

                    <TextBox 
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding JobManagerId}"/>

                    <StackPanel 
                        Orientation="Horizontal"
                        Grid.Row="2" 
                        Grid.Column="0">

                        <TextBlock 
                            VerticalAlignment="Center"
                            Margin="4,0,0,0"
                            Foreground="Red"
                            Text="*" />
                        <TextBlock
                            Margin="8,4"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="Command Line"/>
                    </StackPanel>

                    <TextBox 
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="{Binding CommandLine}"/>

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="8,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Max Task Retry Count"/>

                    <TextBox 
                        Grid.Row="3"
                        Grid.Column="1"
                        Text="{Binding MaxTaskRetryCount}"/>

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="8,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Max Wall Clock Time"/>

                    <StackPanel
                        Grid.Row="4"
                        Grid.Column="1"
                        Orientation="Vertical">
                        <toolkit:TimeSpanUpDown
                            Value="{Binding MaxWallClockTime}"/>
                    </StackPanel>

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="8,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Retention Time"/>

                    <StackPanel
                        Grid.Row="5"
                        Grid.Column="1"
                        Orientation="Vertical">
                        <toolkit:TimeSpanUpDown
                            Value="{Binding RetentionTime}"/>
                    </StackPanel>

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Margin="8,4"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Kill On Completion"/>

                    <ComboBox
                        Grid.Row="6"
                        Grid.Column="1"
                        SelectedIndex="0"
                        ItemsSource="{Binding AvailableKillOnCompletionOptions}"
                        SelectedItem="{Binding KillOnCompletionSelectedItem}">
                    </ComboBox>
                </Grid>

                <!-- Buttons -->
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button
                        Margin="0,12,0,4"
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right"
                        Width="100" 
                        Height="24"
                        IsEnabled="{Binding IsCreateJobButtonEnabled}"
                        Command="{Binding CreateJobSchedule}"
                        Content="Create"/>

                    <!--<Button
                        Margin="8,12,0,4"
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right"
                        Width="100" 
                        Height="24"
                        Command="{Binding CancelCreateJobSchedule}"
                        Content="Cancel"/>-->
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
